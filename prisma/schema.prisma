// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id          String   @id @default(cuid())
  fileName    String
  filePath    String
  fileType    String   // 'photo' or 'video'
  mimeType    String
  size        Int
  uploaderName String?
  createdAt   DateTime @default(now())

  @@map("uploads")
}
